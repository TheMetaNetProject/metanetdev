{|class="wikitable"
! as Target frame
! as Source frame
|-
|{{#ask: [[Category:Metaphor]] [[ Metaphor.Target frame::{{FULLPAGENAME}}]]
| format=ul
}}
|{{#ask: [[Category:Metaphor]] [[ Metaphor.Source frame::{{FULLPAGENAME}}]]
| format=ul
}}
|}
